/*===== MOSTRAR MENU =====*/
const showMenu = (toggleId, navId) =>{
const alternar = document.getElementById (toggleId),
nav=document.getElementById(navId)

if(alternar && navegação){
toggle.addEventListener('clique', ()=>{
nav.classList.toggle('mostrar')
})
}
}
showMenu('nav-toggle','nav-menu')

/*==================== REMOVER MENU CELULAR ====================*/
const navLink = document.querySelectorAll('.nav__link')

função linkAção(){
const navMenu = document.getElementById('nav-menu')
// Quando clicamos em cada nav__link, removemos a classe show-menu
navMenu.classList.remove('mostrar')
}
navLink.forEach(n => n.addEventListener('clique', linkAction))

/*==================== ROLAR SEÇÕES LINK ATIVO ====================*/
seções const = document.querySelectorAll('seção[id]')

const scrollActive = () =>{
const scrollDown = janela.scrollY

seções.forEach(atual =>{
const seçãoHeight = current.offsetHeight,
seçãoTop = atual.offsetTop - 58,
seçãoId = atual.getAttribute('id'),
seçõesClass = document.querySelector('.nav__menu a[href*=' + sectionId + ']')

if(scrollDown > seçãoTop && scrollDown <= seçãoTop + seçãoHeight){
seçõesClass.classList.add('link ativo')
}outro{
seçõesClass.classList.remove('link ativo')
}
})
}
window.addEventListener('scroll', scrollActive)

/*===== ANIMAÇÃO DE REVELAÇÃO DE ROLO =====*/
const sr = ScrollReveal({
origem: 'topo',
distância: '60px',
duração: 2000,
atraso: 200,
//redefinir: verdadeiro
});

sr.reveal('.home__data, .about__img, .skills__subtitle, .skills__text',{});
sr.reveal('.home__img, .about__subtitle, .about__text, .skills__img',{atraso: 400});
sr.reveal('.home__social-icon',{ intervalo: 200});
sr.reveal('.skills__data, .work__img, .contact__input',{intervalo: 200});
